<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1AFFFFFF"
    tools:context=".activity.profile.ProfileActivity">

    <!-- Top Header Section -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:orientation="vertical"
        android:background="@drawable/profile_gradient"
        app:layout_constraintTop_toTopOf="parent">


        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/back"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:scaleType="centerCrop"
            android:layout_margin="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/back"/>
        <!-- Profile Image -->
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/profile_image"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:scaleType="centerCrop"
            app:civ_circle_color="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_person_placeholder" />

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/cart"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_margin="@dimen/_10sdp"
            app:civ_circle_color="@color/white"
            android:scaleType="centerInside"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/cart_checkout" />
        <!-- Name -->
        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:drawableEndCompat="@drawable/ic_edit"
            android:drawablePadding="@dimen/_2sdp"
            app:drawableTint="@color/white"
            tools:text="Jane Cooper"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_image" />


    </androidx.constraintlayout.widget.ConstraintLayout>



    <!-- Settings Section -->
    <LinearLayout
        android:id="@+id/settings_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Edit Profile -->
        <TextView
            android:id="@+id/tvEmail"
            style="@style/ProfileOptionStyle"
            app:drawableStartCompat="@drawable/ic_email"
            tools:text="Email Id"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/_10sdp"
            app:drawableEndCompat="@drawable/ic_edit" />

        <!-- Address Management -->
        <TextView
            android:id="@+id/phone"
            style="@style/ProfileOptionStyle"
            app:drawableEndCompat="@drawable/ic_edit"
            app:drawableStartCompat="@drawable/ic_call"
            tools:text="Phone Number"
            android:drawablePadding="@dimen/_10sdp"/>

        <!-- Help & Support -->
        <TextView
            android:id="@+id/help_support"
            style="@style/ProfileOptionStyle"
            android:text="Help &amp; Support"
            android:drawablePadding="@dimen/_10sdp"
            app:drawableStartCompat="@drawable/ic_help" />

        <!-- Setting -->
        <TextView
            android:id="@+id/tvSetting"
            style="@style/ProfileOptionStyle"
            android:text="Settings"
            android:drawablePadding="@dimen/_10sdp"
            app:drawableStartCompat="@drawable/ic_setting" />

        <!-- Log Out -->
        <TextView
            android:id="@+id/tvLogOut"
            style="@style/ProfileOptionStyle"
            android:text="Log Out"
            android:textColor="#E74C3C"
            android:drawablePadding="@dimen/_10sdp"
            app:drawableStartCompat="@drawable/ic_logout"
            app:drawableTint="#E74C3C" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
